<form action="/users/signin" method="post">
  <p>Username: <input type="text" name="username" class="inline_input" value=<%= params["username"] || "" %> /></p>
  <p>Password: <input type="password" name="password" class="inline_input" value=<%= params["password"] || "" %> /></p>
  <button type="submit">Sign in</button>
</form>