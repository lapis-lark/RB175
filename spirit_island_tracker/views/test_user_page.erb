<h2><%= "#{@user}'s stats" %></h2>
<p><em><%= display_win_information(@user) %></em></p>
<h4>Game history:</h4>
<ul>
  <% @user_games.each do |game, data| %>
    <li class="padded"><a href=<%= "/games/#{game}" %> >
      <%= display_spirits_vs_adversary(data) %>
      <%= " (#{data["date"]})" %>
      <%= "#{data['win?'] == 'true' ? '[WIN]' : ''}" %>
    </a></li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <p class="header"><a href="/">Player Index</a></p>
  <br>
<% end %>