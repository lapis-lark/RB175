<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% @contents.each_with_index do |chapter, idx| %>
      <li class="pure-menu-item">
        <% url = "/chapters/#{idx + 1}" %>
        <a href=<%= url %> class="pure-menu-link"><%= chapter %></a>
      </li>
    <% end %>
  </ul>
</div>